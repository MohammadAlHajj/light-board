<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<GridPane fx:controller="com.lightBoard.controls.Controller"
	xmlns:fx="http://javafx.com/fxml"
	alignment="CENTER"
	hgap="10"
	vgap="10">
	<rowConstraints>
		<RowConstraints />
		<RowConstraints minHeight="350"/>
	</rowConstraints>
	<stylesheets>
		<URL value="@../css/main.css"/>
	</stylesheets>

	<Canvas fx:id="canvas"/>

	<GridPane fx:id="controlsGrid"
		GridPane.rowIndex="1"
		GridPane.columnIndex="0"
		alignment="CENTER"
		hgap="20"
		vgap="20">

		<columnConstraints>
			<ColumnConstraints minWidth="200" />
			<ColumnConstraints/>
			<ColumnConstraints prefWidth="330"/>
			<ColumnConstraints/>
			<ColumnConstraints/>
		</columnConstraints>


		<!-- >>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>> -->
		<!-- Patterns -->
		<!-- >>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>> -->

		<GridPane id="group"
			GridPane.rowIndex="0"
			GridPane.columnIndex="0"
			hgap="10"
			vgap="10"
			maxHeight="Infinity"
			GridPane.vgrow="ALWAYS">
			<rowConstraints>
				<RowConstraints percentHeight="10"/>
				<RowConstraints percentHeight="22.5"/>
				<RowConstraints percentHeight="22.5"/>
				<RowConstraints percentHeight="22.5"/>
				<RowConstraints percentHeight="22.5"/>
			</rowConstraints>
			<columnConstraints>
				<ColumnConstraints percentWidth="50" />
				<ColumnConstraints percentWidth="50" />
			</columnConstraints>

			<HBox id="groupTitle"
				GridPane.rowIndex="0"
				GridPane.columnIndex="0"
				GridPane.columnSpan="2"
				alignment="CENTER">
				<Text text="Patterns"/>
			</HBox>

			<Button fx:id="horizontalBtn"
				onAction="#changePattern"
				GridPane.rowIndex="1"
				GridPane.columnIndex="0"
				maxWidth="Infinity"
				maxHeight="Infinity">
				<graphic>
					<ImageView id="buttonImage"
						fitWidth="35"
						fitHeight="35"
						pickOnBounds="true"
						preserveRatio="true">
						<Image url="/images/control_buttons/horizontal_btn.png" /></ImageView>
				</graphic>
			</Button>

			<Button fx:id="verticalBtn"
				onAction="#changePattern"
				GridPane.rowIndex="1"
				GridPane.columnIndex="1"
				maxWidth="Infinity"
				maxHeight="Infinity">
				<graphic>
					<ImageView id="buttonImage"
						fitWidth="35"
						fitHeight="35"
						pickOnBounds="true"
						preserveRatio="true">
						<Image url="/images/control_buttons/vertical_btn.png" /></ImageView>
				</graphic>
			</Button>

			<Button fx:id="diagonalUpBtn"
				onAction="#changePattern"
				GridPane.rowIndex="2"
				GridPane.columnIndex="0"
				maxWidth="Infinity"
				maxHeight="Infinity">
				<graphic>
					<ImageView id="buttonImage"
						fitWidth="35"
						fitHeight="35"
						pickOnBounds="true"
						preserveRatio="true">
						<Image url="/images/control_buttons/diagonal_up_btn.png" /></ImageView>
				</graphic>
			</Button>

			<Button fx:id="diagonalDownBtn"
				onAction="#changePattern"
				GridPane.rowIndex="2"
				GridPane.columnIndex="1"
				maxWidth="Infinity"
				maxHeight="Infinity">
				<graphic>
					<ImageView id="buttonImage"
						fitWidth="35"
						fitHeight="35"
						pickOnBounds="true"
						preserveRatio="true">
						<Image url="/images/control_buttons/diagonal_down_btn.png" /></ImageView>
				</graphic>
			</Button>

			<Button fx:id="clockwiseCircleBtn"
				onAction="#changePattern"
				GridPane.rowIndex="3"
				GridPane.columnIndex="0"
				maxWidth="Infinity"
				maxHeight="Infinity">
				<graphic>
					<ImageView id="buttonImage"
						fitWidth="35"
						fitHeight="35"
						pickOnBounds="true"
						preserveRatio="true">
						<Image url="/images/control_buttons/clockwise_circle_btn.png" /></ImageView>
				</graphic>
			</Button>

			<Button fx:id="counterclockwiseCircleBtn"
				onAction="#changePattern"
				GridPane.rowIndex="3"
				GridPane.columnIndex="1"
				maxWidth="Infinity"
				maxHeight="Infinity">
				<graphic>
					<ImageView id="buttonImage"
						fitWidth="35"
						fitHeight="35"
						pickOnBounds="true"
						preserveRatio="true">
						<Image url="/images/control_buttons/counterclockwise_circle_btn.png" /></ImageView>
				</graphic>
			</Button>

			<Button	fx:id="infinityBtn"
				onAction="#changePattern"
				GridPane.rowIndex="4"
				GridPane.columnIndex="0"
				GridPane.columnSpan="2"
				maxWidth="Infinity"
				maxHeight="Infinity">
				<graphic>
					<ImageView id="buttonImage"
						fitWidth="35"
						fitHeight="35"
						pickOnBounds="true"
						preserveRatio="true">
						<Image url="/images/control_buttons/infinity_btn.png" /></ImageView>
				</graphic>
			</Button>


		</GridPane>

		<!-- >>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>> -->
        <!-- Controls -->
        <!-- >>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>> -->

		<GridPane id="group"
			GridPane.rowIndex="0"
			GridPane.columnIndex="1"
			hgap="10"
			vgap="10"
			maxHeight="Infinity">
			<rowConstraints>
				<RowConstraints percentHeight="10"/>
				<RowConstraints percentHeight="30"/>
				<RowConstraints percentHeight="30"/>
				<RowConstraints percentHeight="30"/>
			</rowConstraints>
			<columnConstraints>
				<ColumnConstraints percentWidth="25"/>
				<ColumnConstraints percentWidth="60" />
				<ColumnConstraints percentWidth="15" />
			</columnConstraints>

			<HBox id="groupTitle"
				GridPane.rowIndex="0"
				GridPane.columnIndex="0"
				GridPane.columnSpan="3"
				alignment="CENTER">
				<Text text="Pattern Controls"/>
			</HBox>

			<Label text="Length"
				GridPane.rowIndex="1"
				GridPane.columnIndex="0"
				maxWidth="Infinity"/>

			<Slider
				fx:id="tailLengthSlider"
				GridPane.rowIndex="1"
				GridPane.columnIndex="1"
				min="1"
				max="1000"
				majorTickUnit="1000"
				showTickLabels="true"/>

			<Text
				fx:id="tailLengthTxt"
				GridPane.rowIndex="1"
				GridPane.columnIndex="2"/>

			<Label text="Width"
				GridPane.rowIndex="2"
				GridPane.columnIndex="0"
				maxWidth="Infinity"/>

			<Slider
				fx:id="tailThicknessSlider"
				GridPane.rowIndex="2"
				GridPane.columnIndex="1"
				min="1"
				max="50"
				majorTickUnit="50"
				minorTickCount="50"
				snapToTicks="true"
				showTickLabels="true"/>

			<Text
				fx:id="tailThicknessTxt"
				GridPane.rowIndex="2"
				GridPane.columnIndex="2"/>

			<Label text="Speed"
				GridPane.rowIndex="3"
				GridPane.columnIndex="0"
				maxWidth="Infinity"/>

			<Slider
				fx:id="speedSlider"
				GridPane.rowIndex="3"
				GridPane.columnIndex="1"
				min="1"
				snapToTicks="true"
				majorTickUnit="100"
				minorTickCount="100"
				showTickLabels="true"/>

			<Text
				fx:id="speedTxt"
				GridPane.rowIndex="3"
				GridPane.columnIndex="2"/>

		</GridPane>

        <!-- >>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>> -->
		<!-- Toggle Buttons -->
		<!-- >>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>> -->

		<GridPane
			GridPane.rowIndex="0"
			GridPane.columnIndex="2"
			hgap="10"
			vgap="10"
			maxHeight="Infinity">
			<padding>
				<Insets
					top="10"
					bottom="10" />
			</padding>
			<rowConstraints>
				<RowConstraints percentHeight="10"/>
				<RowConstraints percentHeight="30"/>
				<RowConstraints percentHeight="30"/>
				<RowConstraints percentHeight="30"/>
			</rowConstraints>
			<columnConstraints>
				<ColumnConstraints percentWidth="60"/>
				<ColumnConstraints percentWidth="40" />
			</columnConstraints>

			<Button	fx:id="playPauseBtn"
				focusTraversable="false"
				GridPane.rowIndex="1"
				GridPane.columnIndex="0"
				GridPane.rowSpan="3"
				maxWidth="Infinity"
				maxHeight="Infinity"
				onAction="#togglePlayPause">
				<graphic>
					<ImageView fx:id="playBtnIV"
						fitWidth="140"
						fitHeight="140"
						pickOnBounds="true"
						preserveRatio="true">
						<Image url="/images/control_buttons/play_btn.png" />
					</ImageView>
				</graphic>
			</Button>

			<Button fx:id="fullScreenBtn"
				id="pauseBtn"
				GridPane.rowIndex="2"
				GridPane.columnIndex="1"
				GridPane.rowSpan="2"
				maxWidth="Infinity"
				maxHeight="Infinity"
				onAction="#toggleFullscreen" >
				<graphic>
					<ImageView
						fitWidth="75"
						fitHeight="75"
						pickOnBounds="true"
						preserveRatio="true">
						<Image url="/images/control_buttons/maximize_btn.png" />
					</ImageView>
				</graphic>
			</Button>

		</GridPane>

		<!-- >>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>> -->
		<!-- Color Controls -->
		<!-- >>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>> -->
		<GridPane id="group"
			GridPane.rowIndex="0"
			GridPane.columnIndex="3"
			hgap="10"
			vgap="10"
			maxHeight="Infinity"
			GridPane.vgrow="ALWAYS">
			<rowConstraints>
				<RowConstraints percentHeight="10"/>
				<RowConstraints percentHeight="30"/>
				<RowConstraints percentHeight="30"/>
				<RowConstraints percentHeight="30"/>
			</rowConstraints>

			<HBox id="groupTitle"
				GridPane.rowIndex="0"
				GridPane.columnIndex="0"
				GridPane.columnSpan="2"
				alignment="CENTER">
				<Text text="Color"/>
			</HBox>

			<Label text="Background"
				GridPane.rowIndex="1"
				GridPane.columnIndex="0" />

			<ColorPicker fx:id="backgroundCP"
				GridPane.rowIndex="1"
				GridPane.columnIndex="1"
				maxWidth="Infinity"
				onAction="#changeColor"/>

			<Label text="Pattern"
				GridPane.rowIndex="2"
				GridPane.columnIndex="0" />

			<ColorPicker fx:id="foregroundCP"
				GridPane.rowIndex="2"
				GridPane.columnIndex="1"
				maxWidth="Infinity"
				onAction="#changeColor"/>

			<HBox
				GridPane.rowIndex="3"
				GridPane.columnIndex="0"
				GridPane.columnSpan="2"
				spacing="10"
				alignment="CENTER_LEFT">

				<CheckBox text="Override Color&#10;Correction"
					onAction="#toggleColorOverride"/>

				<ImageView id="tooltip"
					fx:id="colorOverrideTooltipIV"
					fitWidth="25"
					fitHeight="25"
					pickOnBounds="true"
					preserveRatio="true">
					<Image url="/images/question_mark_1.png"/>
				</ImageView>

			</HBox>

		</GridPane>

		<!-- >>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>> -->
		<!-- visualPattern header image settings -->
		<!-- >>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>> -->

		<GridPane id="group"
			GridPane.rowIndex="0"
			GridPane.columnIndex="4"
			hgap="10"
			vgap="10">
			<rowConstraints>
				<RowConstraints percentHeight="10"/>
				<RowConstraints percentHeight="50"/>
				<RowConstraints percentHeight="20"/>
				<RowConstraints percentHeight="20"/>
			</rowConstraints>
			<columnConstraints>
				<ColumnConstraints percentWidth="50"/>
				<ColumnConstraints percentWidth="50" />
			</columnConstraints>

			<HBox id="groupTitle"
				GridPane.rowIndex="0"
				GridPane.columnIndex="0"
				GridPane.columnSpan="2"
				alignment="CENTER">
				<Text text="Leading Image"/>
			</HBox>

			<HBox fx:id="patternHeaderPreviewHBox"
				GridPane.rowIndex="1"
				GridPane.columnIndex="0"
				GridPane.columnSpan="2"
				alignment="CENTER">
				<ImageView fx:id="patternHeaderPreview"/>
			</HBox>

			<Slider fx:id="patternImageSizeSlider"
				GridPane.rowIndex="2"
				GridPane.columnIndex="0"
				GridPane.columnSpan="2"
				min="50"
				max="500"
				snapToTicks="true"
				majorTickUnit="500"
				minorTickCount="450"
				showTickLabels="true"
				showTickMarks="true"/>

			<Button text="Pick"
				GridPane.rowIndex="3"
				GridPane.columnIndex="0"
				maxWidth="Infinity"
				onAction="#selectPatternHeaderImage"/>

			<Button text="Clear"
				GridPane.rowIndex="3"
				GridPane.columnIndex="1"
				maxWidth="Infinity"
				onAction="#clearPatternHeaderImage"/>

		</GridPane>

		<!-- >>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>> -->
		<!-- Sound settings -->
		<!-- >>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>> -->

		<GridPane id="group"
			GridPane.rowIndex="0"
			GridPane.columnIndex="5"
			prefWidth="200"
			hgap="10"
			vgap="10"
			maxHeight="Infinity"
			GridPane.vgrow="ALWAYS">
			<rowConstraints>
				<RowConstraints percentHeight="10"/>
				<RowConstraints percentHeight="30"/>
				<RowConstraints percentHeight="30"/>
				<RowConstraints percentHeight="30"/>
			</rowConstraints>
			<columnConstraints>
				<ColumnConstraints percentWidth="50"/>
				<ColumnConstraints percentWidth="50"/>
			</columnConstraints>

			<HBox id="groupTitle"
				GridPane.rowIndex="0"
				GridPane.columnIndex="0"
				GridPane.columnSpan="2"
				alignment="CENTER">
				<Text text="Sound"/>
			</HBox>

			<Label fx:id="currentSoundLbl"
				GridPane.rowIndex="1"
				GridPane.columnIndex="0"
				GridPane.columnSpan="2"
				prefWidth="50"
				maxWidth="Infinity"/>

			<Button text="Pick"
				GridPane.rowIndex="2"
				GridPane.columnIndex="0"
				maxWidth="Infinity"
				maxHeight="Infinity"
				onAction="#selectPatternSound"/>

			<Button fx:id="toggleMuteUnmuteBtn"
				GridPane.rowIndex="2"
				GridPane.columnIndex="1"
				maxWidth="Infinity"
				maxHeight="Infinity"
				onAction="#toggleMuteUnmutePatternSound">
				<graphic>
					<ImageView fx:id="muteUnmuteBtnIV"
						fitWidth="45"
						fitHeight="45"
						pickOnBounds="true"
						preserveRatio="true">
						<Image url="/images/control_buttons/mute_btn.png" />
					</ImageView>
				</graphic>
			</Button>

			<HBox
				GridPane.rowIndex="3"
				GridPane.columnIndex="0"
				GridPane.columnSpan="2"
				spacing="10"
				alignment="CENTER_LEFT">

				<CheckBox text="Continuous&#10;Sound Swing"
					onAction="#toggleSoundSwing"/>

				<ImageView id="tooltip"
					fx:id="continuousSoundSwingTooltipIV"
					fitWidth="25"
					fitHeight="25"
					pickOnBounds="true"
					preserveRatio="true">
					<Image url="/images/question_mark_1.png"/>
				</ImageView>

			</HBox>

		</GridPane>

	</GridPane>

</GridPane>