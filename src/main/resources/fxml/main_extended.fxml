<?import java.net.URL?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.AnchorPane?>
<StackPane fx:controller="com.lightBoard.controls.Controller"
		   xmlns:fx="http://javafx.com/fxml">
	<stylesheets>
		<URL value="@../css/main_extended.css"/>
	</stylesheets>


	<Canvas fx:id="canvas"/>

	<AnchorPane fx:id="controlsLayer"
				pickOnBounds="false">

		<VBox fx:id="leftBox"
			  alignment="CENTER"
			  AnchorPane.leftAnchor="5"
			  AnchorPane.bottomAnchor="5"
			  AnchorPane.topAnchor="5">

			<Text text="Patterns"/>

			<Button text="--"
					fx:id="horizontalBtn"
					onAction="#changePattern"
					maxWidth="Infinity"/>

			<Button text="|"
					fx:id="verticalBtn"
					onAction="#changePattern"
					maxWidth="Infinity"/>

			<Button text="/"
					fx:id="diagonalUpBtn"
					onAction="#changePattern"
					maxWidth="Infinity"/>

			<Button text="\\"
					fx:id="diagonalDownBtn"
					onAction="#changePattern"
					maxWidth="Infinity"/>

			<Button text="Infinity"
					fx:id="infinityBtn"
					onAction="#changePattern"
					maxWidth="Infinity"/>

			<Button text="O"
					fx:id="CircleBtn"
					onAction="#changePattern"
					maxWidth="Infinity"/>
		</VBox>

		<!---->

		<VBox fx:id="bottomBox"
			  alignment="center"
			  spacing="10"
			  AnchorPane.bottomAnchor="5"
			  AnchorPane.leftAnchor="5"
			  AnchorPane.rightAnchor="5">

			<Button text="Pause"
					fx:id="playPauseBtn"
					onAction="#togglePlayPause"
					minWidth="200"/>

			<HBox
				alignment="center"
				spacing="10">
				<!--<Text text="Controls"/>-->

				<Label text="Length"/>

				<Slider
					fx:id="tailLengthSlider"
					min="1"
					max="1000"
					majorTickUnit="1000"
					showTickLabels="true"/>

				<Text fx:id="tailLengthTxt"/>

				<Label text="Width"/>

				<Slider
					fx:id="brushSizeSlider"
					min="1"
					max="50"
					majorTickUnit="50"
					showTickMarks="true"
					snapToTicks="true"
					showTickLabels="true"/>

				<Text
					fx:id="brushSizeTxt"/>

				<Label text="Speed"/>

				<Slider
					fx:id="speedSlider"
					min="1"
					max="100"
					snapToTicks="true"
					majorTickUnit="100"
					minorTickCount="100"
					showTickLabels="true"
					showTickMarks="true"/>

				<Text
					fx:id="speedTxt"/>
			</HBox>

		</VBox>

		<Button text="Min"
				AnchorPane.bottomAnchor="5"
				AnchorPane.rightAnchor="5"
				onAction="#toggleFullscreen"/>
	</AnchorPane>

</StackPane>

